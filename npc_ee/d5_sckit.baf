IF
	Class(LastSummonerOf(Myself),FIGHTER)
	NumTimesTalkedTo(0)
THEN
	RESPONSE #100
	SetGlobal("D5FIKIT","GLOBAL",1)    // fighter selections
	SetNumTimesTalkedTo(1)
	ActionOverride(LastSummonerOf(Myself),StartDialogOverride("d5fikit",Myself))
END

